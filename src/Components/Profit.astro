}
const beneficios = [
    {
        icon: '🚀',
        title: 'Impulso a la innovación',
        description: 'Equipa a tu equipo con las últimas tecnologías (Python, Java, Cloud, IA...) para crear soluciones disruptivas.'
    },
    {
        icon: '⏱️',
        title: 'Mayor eficiencia operativa',
        description: 'Equipa a tu equipo con las últimas tecnologías (Python, Java, Cloud, IA...) para crear soluciones disruptivas.'
    },
    {
        icon: '📈',
        title: 'ROI medible',
        description: 'Convierte la capacitación en un activo estratégico. Mide el impacto directo en productividad y calidad.'
    },
    {
        icon: '🔒',
        title: 'Retención de talento clave',
        description: 'Demuestra compromiso con el crecimiento de tus empleados, aumentando su lealtad y reduciendo la rotación.'
    },
    {
        icon: '🏆',
