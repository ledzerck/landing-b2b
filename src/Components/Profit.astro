---

<section id="profit" class="relative py-8 bg-shadow-900">

<!--Etiqueta temporal -->
    <div class="absolute top-5 left-5 bg-rose-400 text-rose-900 rounded-full py-0.5 px-3 text-xs font-bold">04 Beneficios</div>

    <div class="container mx-auto flex flex-col gap-8 p-5 max-w-[1024px]">
        <h2 class="text-center text-3xl font-semibold mb-7">Invierte en tu equipo, genera resultados tangibles</h2>
        <div class="grid grid-cols-3 gap-8">
            {
                beneficios.map(beneficio => (
                    <article class="border-shadow-700 border-1 bg-shadow-800 p-5 rounded-xl">
                        <div class="text-4xl mb-2">{beneficio.icon}</div>
                        <h3 class="text-xl font-semibold mb-2">{beneficio.title}</h3>
                        <p class="text-zinc-400">{beneficio.description}</p>
                    </article>
                ))
            }
        </div>
    </div>
</section>